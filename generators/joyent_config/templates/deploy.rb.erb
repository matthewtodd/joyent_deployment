set :application, '<%= application %>'
set :user,        'matthew'
set :database,    "#{user}_#{application}_production"
set :domain_path, "/users/home/#{user}/domains/<%= domain %>"
set :deploy_to,   "#{domain_path}/var/www"

set :scm, :git
set :local_repository, '.git'
set :repository,  "git://github.com/<%= `git config --get github.user`.strip %>/#{application}.git"
set :branch, 'master'
set :git_shallow_clone, 1
set :git_enable_submodules, true

set :group_writable, false
set :use_sudo, false

server 'woodward.joyent.us', :web, :app, :db, :primary => true, :user => user